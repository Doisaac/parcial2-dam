<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Banner -->
        <ImageView
            android:id="@+id/loginImage"
            android:layout_width="wrap_content"
            android:layout_height="378dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/login_banner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <!-- Título -->
            <TextView
                android:id="@+id/titleLogin"
                style="@style/TitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Inicio de sesión" />

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/subtitleLogin"
                style="@style/SubtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="35dp"
                android:text="@string/login_subtitle"
                android:textAlignment="viewStart"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textStyle="normal" />

            <!-- Campo Email -->
            <TextView
                style="@style/FieldTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Email" />

            <EditText
                android:id="@+id/inputEmail"
                style="@style/HadogaEditText"
                android:layout_marginBottom="16dp"
                android:hint="hadogasantana@gmail.com"
                android:inputType="textEmailAddress" />

            <!-- Campo Contraseña -->
            <TextView
                style="@style/FieldTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Contraseña" />

            <EditText
                android:id="@+id/inputPassword"
                style="@style/HadogaEditText"
                android:layout_marginBottom="24dp"
                android:hint="Introduce tu contraseña"
                android:inputType="textPassword" />

            <!-- Recordarme -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkRememberMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recordarme"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Botón principal -->
            <Button
                android:id="@+id/btnLogin"
                style="@style/HadogaPrimaryButton"
                android:layout_marginBottom="24dp"
                android:text="Inicia sesión" />

            <!-- Texto de registro -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/SmallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿No tienes cuenta? "
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/textGoRegister"
                    style="@style/SmallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Regístrate"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>