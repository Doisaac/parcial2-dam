<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingTop="72dp"
            android:text="Nueva Sucursal" />

        <!-- Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_card_button"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                style="@style/FieldTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Datos"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/etNombreSucursal"
                style="@style/HadogaFieldEditText"
                android:layout_marginBottom="15dp"
                android:hint="Nombre de sucursal" />

            <EditText
                android:id="@+id/etCodigoSucursal"
                style="@style/HadogaFieldEditText"
                android:layout_marginBottom="15dp"
                android:hint="Código de sucursal" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:foregroundGravity="center_vertical">

                <!-- Fondo con borde -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/edittext_field_background" />

                <!-- Ícono al inicio -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_edit"
                    android:tint="@color/colorPurple" />

                <!-- Spinner real -->
                <Spinner
                    android:id="@+id/spDepartamento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="36dp"
                    android:dropDownVerticalOffset="8dp"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp"
                    android:popupBackground="@color/colorBackground"
                    android:spinnerMode="dropdown" />

                <!-- Flechita al final -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_arrow_down"
                    android:tint="@color/colorPurple" />
            </FrameLayout>


            <EditText
                android:id="@+id/etDireccion"
                style="@style/HadogaFieldEditText"
                android:layout_marginBottom="15dp"
                android:hint="Dirección completa" />

            <EditText
                android:id="@+id/etTelefono"
                style="@style/HadogaFieldEditText"
                android:layout_marginBottom="15dp"
                android:hint="Teléfono" />

            <EditText
                android:id="@+id/etCorreo"
                style="@style/HadogaFieldEditText"
                android:layout_marginBottom="15dp"
                android:hint="Correo" />

        </LinearLayout>

        <!-- Botón guardar -->
        <Button
            android:id="@+id/btnGuardarSucursal"
            style="@style/HadogaPrimaryButton"
            android:text="Guardar" />

    </LinearLayout>
</ScrollView>