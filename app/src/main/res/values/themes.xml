<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Hadoga" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/inter</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!-- SplashScreen -->
    <style name="Theme.Hadoga.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/hadoga_logo</item>
        <item name="windowSplashScreenBackground">@color/colorBackground</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.Hadoga</item>
    </style>

    <style name="Theme.Hadoga" parent="Base.Theme.Hadoga" />
</resources>