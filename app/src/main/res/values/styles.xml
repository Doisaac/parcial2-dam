<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo global de títulos -->
    <style name="TitleText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo global de subtítulos -->
    <style name="SubtitleText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Título de campo (ej: Email, Contraseña) -->
    <style name="FieldTitleText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para EditText -->
    <style name="HadogaEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/colorGrayText</item>
        <item name="android:padding">20dp</item>
    </style>

    <!-- Botón principal -->
    <style name="HadogaPrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_primary_selector</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Texto pequeño general (ej: enlaces) -->
    <style name="SmallText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGrayText</item>
    </style>

    <!-- Card reutilizable del dashboard -->
    <style name="HadogaCardButton">
        <item name="android:background">@drawable/bg_card_button</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">140dp</item>
    </style>

    <!-- Texto dentro de las cards -->
    <style name="HadogaCardText">
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <!-- Botón de logout -->
    <style name="HadogaButtonLogout" parent="android:Widget.Button">
        <item name="android:background">@drawable/bg_button_logout</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <!-- Campo de texto reutilizable para fragments -->
    <style name="HadogaFieldEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_field_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/colorGrayText</item>
        <item name="android:padding">15dp</item>
    </style>

    <!-- Botón editar azul -->
    <style name="HadogaMiniButtonBlue" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button_blue</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Botón editar morado -->
    <style name="HadogaMiniButtonPurple" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button_purple</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>